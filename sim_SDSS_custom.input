  
########################################################
#
# Input file for $SNANA_DIR/bin/snlc_sim.exe
#
#
#########################################################

#INPUT_INCLUDE_FILE:  sim_SALT2_include.input copiato sotto, sticazzi

NGENTOT_LC:    100             # number of SN lightcurves to generate 
NGEN_LC:	10
#GENVERSION: TEST1    # SNDATA version to generate
GENSOURCE:  RANDOM   

SIMLIB_FILE: $SNDATA_ROOT/simlib/SDSS/SDSS2005_ugriz.SIMLIB

CIDOFF: 000
KCOR_FILE:  $SNDATA_ROOT/kcor/SDSS/SNCOSM09+fitsFormat/kcor_SDSS_Bessell90_BD17.fits
SURVEY:		SDSS
APPLY_SEARCHEFF_OPT: 3  # 1->pipeline detect; +2->spec confirmed; 3-> both
SEARCHEFF_PIPELINE_LOGIC_FILE: $SNDATA_ROOT/models/searcheff/SEARCHEFF_PIPELINE_LOGIC.DAT
SEARCHEFF_PIPELINE_EFF_FILE:  $SNDATA_ROOT/models/searcheff/SEARCHEFF_PIPELINE_SDSS.DAT
SEARCHEFF_SPEC_FILE:          $SNDATA_ROOT/models/searcheff/SEARCHEFF_SPEC_SDSS.DAT

# selection criteria for generation
GENFILTERS:       ugriz
GENRANGE_RA:      -50.0     +59.0   deg
GENRANGE_DECL:    -1.258    +1.258  deg
GENRANGE_PEAKMJD:  53615.0  53695.0   # 53615.0  53704.0# Sep 1 - Nov 30 2005
GENSIGMA_SEARCH_PEAKMJD:  1.0         # sigma-smear for  SEARCH_PEAKMJD (days)

GENRANGE_REDSHIFT:  0.02    0.45
GENSIGMA_REDSHIFT:  0.0005

GENRANGE_TREST:   -20.0  80.0     # rest epoch relative to peak (days)

RANSEED: 128473       # random number seed

# smear flags: 0=off, 1=on
SMEARFLAG_FLUX:    1  # photo-stat smearing of signal, sky, etc ...
SMEARFLAG_ZEROPT:  1  # smear zero-point with zptsig

FORMAT_MASK: 10  # 2->ascii,   32->fits , +8 w/o sim_vars like real data, 2+8 = 10

SIMGEN_DUMP:  4  ZCMB  PEAKMJD SALT2c SALT2x1

# include file to define SALT2 model and SNIa rate vs. redshift

GENMODEL: SALT2.JLA-B14
GENMAG_SMEAR_MODELNAME: G10

GENMEAN_SALT2x1:     0.0
GENRANGE_SALT2x1:   -5.0  +3.0     # x1 (stretch) range
GENSIGMA_SALT2x1:    1.5   0.9     # bifurcated sigmas

GENMEAN_SALT2c:     0.0
GENRANGE_SALT2c:   -0.40   0.60     # color range
GENSIGMA_SALT2c:    0.08   0.14     # bifurcated sigmas

GENALPHA_SALT2:  0.14
GENBETA_SALT2:   3.2

# - - - - 
DNDZ: POWERLAW 2.6E-5 1.5  # 2.6E-5 * (1+z)^1.5

H0: 65 # SALT2 default value is 70
